# .clang-tidy  (repo root)
Checks: >
  -*
  ,bugprone-*
  ,performance-*
  ,modernize-*
  ,readability-*
  ,cppcoreguidelines-avoid-c-arrays
WarningsAsErrors: ['bugprone-*', 'performance-*']
HeaderFilterRegex: '^(src|include)/'
AnalyzeTemporaryDtors: false
FormatStyle: none
CheckOptions:
  modernize-loop-convert.MinConfidence: reasonable

